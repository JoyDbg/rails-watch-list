<%= render "banner", list: @list %>
<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://media.gqmagazine.fr/photos/6399e729aa342b4423bab367/16:9/w_2560%2Cc_limit/GettyImages-636899879.jpg)";>
  <div class="container">
    <h1><%= @list.name %></h1>
  </div>
</div>

<div class="container">

  <%= link_to "Add a movie", new_list_bookmark_path(@list), class: "btn btn-flat" %>
  <%= link_to "Delete a list", list_path(@list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-flat" %>

  <div class = "container mt-3">
    <div class="cards">
      <% @list.bookmarks.each do |bookmark| %>
        <div class="card-trip">
          <img src="<%= bookmark.movie.poster_url%>">
          <div class="card-trip-infos">
            <div>
              <h2><%= bookmark.movie.title %></h2>
              <p><%= bookmark.movie.overview %></p>
            </div>
            <%= link_to "Delete",
            bookmark_path(bookmark),
            data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
            %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


<%= render "footer", list: @list %>
